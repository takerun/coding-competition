{
    "editor.tabCompletion": "on",
    "editor.formatOnSave": true,
    "files.associations": {
        "iostream": "cpp",
        "random": "cpp"
    },
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
		"cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt.out -fdiagnostics-color=always -std=c++11 && $dir$fileNameWithoutExt.out",
	},
}