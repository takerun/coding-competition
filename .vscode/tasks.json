{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ アクティブなファイルのビルド",
			"command": "/usr/local/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++14",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/a.out",
				"-I",
				"${workspaceFolder}/lib/ac-library"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "コンパイラ: /usr/local/bin/g++"
		}
	]
}